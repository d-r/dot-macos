[user]
    email = "9402+d-r@users.noreply.github.com"
    name = "Daniel Rosengren"

[init]
    # Removes the need to do `git push â€” set-upstream origin <branch>` when the
    # branch does not yet exist upstream.
    defaultBranch = "main"

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    # See https://dandavison.github.io/delta/configuration.html
    dark = true
    navigate = true  # use n and N to move between diff sections
    hunk-header-style = omit

[merge]
    conflictstyle = zdiff3

[push]
    autoSetupRemote = true

[alias]
    # Status
    st = "status --short"
    lg = "log --oneline --decorate"
    lf = "log --name-status"
    last = "log -1 HEAD --stat"

    # Changes
    ca = "commit -a --amend --no-edit"
    amend = "commit --amend"
    nm = "nevermind"
    nevermind = "!git reset --hard HEAD && git clean -d -f"
    undo = "reset --hard HEAD~"
    discard = "checkout --"
    unstage = "reset head --"
    untrack = "rm -r --cached"
    pf = "push --force"

    # Branches (long-winded)
    new-branch = "checkout -b"
    delete-branch = "branch -D"
    delete-remote-branch = "push origin --delete"
    move-branch = "branch -f"
    rename-branch = "branch -m"

    # Branches (short)
    co = "checkout"
    nb = "new-branch"
    db = "delete-branch"
    drb = "delete-remote-branch"
    mb = "move-branch"
    rb = "rename-branch"

    # Lists
    branches = "branch -a -v"
    tags = "tag list"
    remotes = "remote -v"
    stashes = "stash list"
